#!/usr/bin/env bash
set -e

deploy_apache_conf() {
    local src=$1/apache/httpd.conf
    local dest=$(sudo httpd -V | grep SERVER_CONFIG_FILE | cut -d'"' -f2)
    sudo rm -f $dest
    sudo cp $src $(dirname $dest)
    echo -e "Deployed $src to $dest."
}

deploy_apache_conf $C10_DOTFILES

set +e
echo -e "Restarting Apache..."
sudo pkill -9 httpd
sudo apachectl -k restart > /dev/null 2>&1

echo -e "Done!"
