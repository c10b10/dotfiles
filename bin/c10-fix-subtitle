#!/usr/bin/env bash

file=$1

filename=$(basename "$file")
extension="${filename##*.}"
filename="${filename%.*}"

result=${filename}_RO\.${extension}
cp $file $result

sed -i.bak s///g $result
sed -i.bak s/Ţ/Ț/g $result
sed -i.bak s/ţ/ț/g $result
sed -i.bak s/ş/ș/g $result
sed -i.bak s/Ş/Ș/g $result
sed -i.bak s/ă/ă/g $result
sed -i.bak s/Ă/Ă/g $result
sed -i.bak s/â/â/g $result
rm ${result}.bak

iconv -f ISO-8859-16 -t UTF-8 $result > ${result}_bk
rm $result
iconv -f UTF-8 -t ISO-8859-16 ${result}_bk > $result

rm ${result}_bk
echo "= Done"
