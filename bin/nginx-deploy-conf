#!/usr/bin/env bash
set -e

deploy_nginx_conf() {
    local src=$1/nginx
    local dest=$(nginx-conf-path)
    sudo cp -i $src/nginx.conf $(dirname $dest)
    sudo cp -ri $src/global $(dirname $dest)
    echo -e "Deployed config to $(dirname $dest)."
}

deploy_nginx_conf $C10_DOTFILES

echo -e "Done deploying nginx config!"
